<configs>
	<append xpath="/items">
		
													<!-- Shock Grenade -->		
													
		<item name="thrownShockGrenadeDyfed">
			<property name="Extends" value="thrownStunGrenadeDyfed"/>
			<property name="Tags" value="ammo,weapon,attPerception,perkElectrocutioner"/>
			<property name="ItemTypeIcon" value="explosion"/>
			<property name="CustomIcon" value="thrownGrenadeContact"/>
			<property name="CustomIconTint" value="0000cc"/>
			<property name="TintColor" value="0,0,204"/>
			<property name="DescriptionKey" value="thrownShockGrenadeDyfedDesc"/>
			<property name="DisplayType" value="ammoShockGrenade"/>
			<property name="Class" value="ItemClassTimeBomb"/>
			<property name="HoldType" value="57"/>
			<property name="Meshfile" value="@:Other/Items/Weapons/Ranged/Grenade/GrenadePrefab.prefab"/>
			<property name="DropScale" value="2.5"/>
			<property name="Material" value="Mmetal"/>
			<property name="Stacknumber" value="50"/>
			<property name="EconomicValue" value="200"/>
			<property name="Weight" value="0"/>
			<property name="Explosion.ParticleIndex" value="0"/>
			<property name="Explosion.RadiusBlocks" value="3.5"/>
			<property name="Explosion.RadiusEntities" value="3.5"/> <!-- damage radius for entities -->
			<property name="Explosion.DamageBonus.earth" value="0"/> <!-- should work? -->
			<property name="Explosion.DamageBonus.water" value="0"/>
			<property name="Explosion.BlastPower" value="2"/> <!-- (int,100) how far ragdolls and such are flung -->
			<property name="FuseTime" value="3"/>
			<property name="FusePrimeOnActivate" value="true"/>
			<property name="ExplodeOnHit" value="true"/>
			<property name="StickPercent" value="0"/>
			<property name="TraderStageTemplate" value="baseTier2"/>
			<!--property name="UnlockedBy" value="craftingSpecialGrenades"/-->
			<property name="Group" value="Ammo/Weapons,Ammo"/>
			<property class="Action0">
				<property name="Class" value="ThrowAway"/>
				<!-- <property name="Hitmask_override" value="Arrow"/> unfortunately this cannot work without a serious rewrite of the hitmask system -->
				<property name="Delay" value="0"/> <!-- obsolete if rounds per minute exists -->
				<property name="Throw_strength_default" value="10"/>
				<property name="Throw_strength_max" value="50"/>
				<property name="Max_strain_time" value="1.25"/>
				<property name="Sound_start" value="grenade_throw"/>
				<property name="Gravity" value="-5"/>
				<requirement name="CVarCompare" cvar="_underwater" operation="LT" value=".98"/>
			</property>
			<property class="Action1">
				<property name="Class" value="Activate"/>
				<property name="Delay" value="1"/>
				<property name="Sound_start" value="grenade_pullpin"/>
			</property>
			<property name="ThrowableDecoy" value="true"/>
			<effect_group tiered="false">
				<triggered_effect trigger="onProjectileImpact" action="ModifyCVar" target="positionAOE" range="3.2" cvar=".buffShockedDurationStart" operation="set" value="10"/>
				<triggered_effect trigger="onProjectileImpact" action="AddBuff" target="positionAOE" range="3.2" buff="buffShocked"/>
				<passive_effect name="EntityDamage" operation="base_set" value="50" tags="perkElectrocutioner"/>
				<passive_effect name="BlockDamage" operation="base_set" value="0" tags="perkElectrocutioner"/>
				<triggered_effect trigger="onSelfSecondaryActionEnd" action="AddPart" part="Sparks" prefab="ParticleEffects/p_electric_shock_small" parentTransform="Handle" localPos="0,-.40,0" localRot="0,0,0"/>		
				<triggered_effect trigger="onSelfPrimaryActionEnd" action="RemovePart" part="Sparks" />		
				<!-- onSelfSecondaryActionEnd onSelfActivate-->
				<triggered_effect trigger="onSelfSecondaryActionEnd" action="ModifyCVar" cvar="DamageElectric" operation="add" value="14"/>
				<triggered_effect trigger="onSelfSecondaryActionEnd" action="ModifyCVar" cvar="ShockCharge" operation="add" value="14"/>
				<display_value name="ElectricalDamage" value="150"/>
				<display_value name="dShockCharge" title_key="statShockCharge" value="10"/>
				<display_value name="dExRadius" value="3"/>
			</effect_group>
		</item>
	</append>
		
</configs>