<configs>
	<append xpath="/recipes">
	
		<!-- Added Nuts and Bolts for recipes -->
		<recipe name="resourceNutsBoltsDyfed" count="1" material_based="true" craft_area="forge" is_trackable="false" tags="perkAdvancedEngineering">
			<ingredient name="unit_iron" count="5"/>
			<ingredient name="unit_clay" count="1"/>
		</recipe>
	
		<!--Add Helper for Iron Bars, Iron Bars Centered, and Iron Bars Corner -->
		<recipe name="ironBarVariantHelperDyfed" count="1" material_based="true" craft_area="forge" is_trackable="false" tags="perkAdvancedEngineering">
			<ingredient name="unit_iron" count="100"/>
			<ingredient name="unit_clay" count="20"/>
			<effect_group>
				<passive_effect name="CraftingIngredientCount" operation="perc_add" level="0,1,2,3,4" value=".25,.25,.25,.12,.06" tags="unit_clay,unit_iron"/>
			</effect_group>
		</recipe>

    </append>	

</configs>